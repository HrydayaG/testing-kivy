<CreateAccountWindow>:
    name: "create"
    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height

            Image:
                size_hint_x: 0.5
                pos_hint: {"x":0.25, "top":1.24999}
                source: 'l2.jpg'
                allow_stretch: True
                keep_ratio: True

            TextInput:
                text: "Name"
                pos_hint: {"x":0.1666, "top":0.541666}
                size_hint: 0.66, 0.041666
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14.5**4

            TextInput:
                text: "E-mail"
                pos_hint: {"x":0.1666, "top":0.41666}
                size_hint: 0.66, 0.041666
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14.5**4

            TextInput:
                text: "Password"
                pos_hint: {"x":0.1666, "top":0.291666}
                size_hint: 0.66, 0.041666
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14.5**4

        Button:
            pos_hint:{"x":0.58333,"top":0.1666}
            size_hint: 0.25, 0.041666
            font_size: (root.width**2 + root.height**2) / 14.5**4
            text: "Cancel"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.1666,"top":0.1666}
            size_hint: 0.25, 0.041666
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14.5**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

